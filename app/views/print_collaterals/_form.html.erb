<%= form_for(@print_collateral) do |f| %>
  <%= render :partial => "layouts/error_block", :locals => {:object => @print_collateral} %>
  
  <div class="field">
    <%= f.label :print_category, "Print Category" %><br />
    <%= f.select(:print_category, %w[Magazine Postcard Advertisement Other]) %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
