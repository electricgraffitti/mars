<div id="setup_box">
<%= form_for(@print_collateral) do |f| %>
  <%= render :partial => "layouts/error_block", :locals => {:object => @print_collateral} %>
  
  <div class="field">
    <%= f.label :print_category, "Print Category" %><br />
    <%= f.select(:print_category, %w[Magazine Postcard Advertisement Other]) %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :list_order, "List Order" %><br />
    <%= f.text_field :list_order, size: 3 %>
  </div>
  <div class="field">
    <%= f.label :image, "Image Upload" %>
    <%= f.file_field :image %>
  </div>
  <div class="clear"></div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 65, :rows => 10 %>
  </div>
  <div class="clear"></div>
  <div class="field">
    <%= f.submit "Create", :class => "button_lg orange_button" %>
  </div>
  <div class="field">
    <%= link_to 'Cancel', admin_dashboard_path, :class => "button_lg orange_button"%>
  </div>
<% end %>
</div>
