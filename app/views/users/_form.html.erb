<div id="setup_box">
<%= form_for(@user) do |f| %>
	<%= render :partial => "layouts/error_block", :locals => {:object => @user} %>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="clear"></div>
  <div class="field">
    <%= f.submit "Login", :class => "button_lg orange_button" %><br/>
    <%= link_to 'Back', admins_path %>
  </div>
<% end %></div>
